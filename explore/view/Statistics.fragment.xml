<core:FragmentDefinition
    xmlns="sap.m" xmlns:table="sap.ui.table" 
    xmlns:core="sap.ui.core">
    
    <table:Table id="statisTable" 
        showColumnVisibilityMenu="true"
        selectionMode="None" rows="{/}">

          <table:toolbar>
            <Toolbar>
                <content>
                    <Title text="Count of registration by status" />
                    <ToolbarSpacer />
                    <Button
                        text="Fresh"
                        id="refreshStatisTable"
                        icon="sap-icon://refresh"
                        press="onRefreshButtonpressed">
                    </Button>
                </content>
            </Toolbar>
        </table:toolbar>

    </table:Table>
</core:FragmentDefinition>