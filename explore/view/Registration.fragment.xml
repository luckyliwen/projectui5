<core:FragmentDefinition
    xmlns="sap.m"  xmlns:table="sap.ui.table" 
    xmlns:core="sap.ui.core">

<table:Table id="registrationTable"  visibleRowCount="20"
        showColumnVisibilityMenu="true"
        selectionMode="MultiToggle"
        rowSelectionChange="onRegistrationTableRowSelectChanged">
        <table:toolbar>
            <Toolbar>
                <content>
                    <Title id="regTableText" />
                    <ToolbarSpacer />
                    <Title text="Tips: Press table column head for sort, filter... " />
                    <ToolbarSpacer />
                    <Button
                        text="Fresh"
                        id="freshRegTable"
                        icon="sap-icon://refresh"
                        press="onRefreshButtonpressed">
                    </Button>
                </content>
            </Toolbar>
        </table:toolbar>
</table:Table>

</core:FragmentDefinition>