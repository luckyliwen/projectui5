<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:html="http:www.w3.org1999xhtml"
    xmlns:table="sap.ui.table"
    xmlns:commons="sap.ui.commons"
    xmlns:core="sap.ui.core"
    xmlns:mylib="csr.lib"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form">

    <Page  id="detailPage" title="New Project">
 <IconTabBar>
        <items>
            <IconTabFilter
                key="mainIconTab"
                icon="sap-icon://activity-individual"
                text="Project Information">
                <content>
                    <form:SimpleForm id="projectForm" 
                          layout="ResponsiveGridLayout" 
                          labelSpanL="4"
                          labelSpanM="4"
                         >
                        <form:content>
                            <core:Title text="General" />
                                <Label text="Author"  required="true" />
                                <Input value="{/Author}"  enabled="false" />

                                <Label text="Title"  required="true" tooltip="Brief introduct of the project"/>
                                <Input value="{/Title}"  enabled="{g>/bOwner}" />
                                
                                <Label text="Description" tooltip="Long description of the project, normally include time, venue..."/>
                                <TextArea rows="2" value="{/Description}" enabled="{g>/bOwner}"/> 

                                <Label text="Link"  tooltip="URL which provide extra information"/>
                                <Input value="{/Link}"  enabled="{g>/bOwner}"/>

                                <Label text="Form download URL"  tooltip="The URL of form downloading, only need if employee need upload some form "/>
                                <Input value="{/FormDownloadUrl}"  enabled="{g>/bOwner}"/>

                                <Label text="Support Multiple Entries" 
                                    tooltip="One employee can create multiple entries, like the kid@sap one parent can register multiple children "/>
                                <CheckBox selected="{/MultipleEntry}" text="If checked, one employee can create multiple entries" 
                                    enabled="{g>/bOwner}"/>

                                <Label text="Display Project Information at the top of form" 
                                    tooltip="If not checked, then user need click button to show project information"/>
                                <CheckBox selected="{/DisplayProjectInfoAtTop}" text="If checked, employee can see project at the top" 
                                    enabled="{g>/bOwner}"/>

                                <Label text="Deadline" tooltip="The deadline which employee must finish"/>
                                <Input value="{/Deadline}"  enabled="{g>/bOwner}"/> 

                                <Label text="Maximum Registration Number" tooltip="The maximum number of administrator can approve"/>
                                <Input value="{/MaxNum}"  enabled="{g>/bOwner}"/> 

                                <Label text="Need Approve Process" tooltip=""/>
                                <CheckBox selected="{/NeedAprrove}" text="If needed, you can design Email Notify also"
                                    enabled="{g>/bOwner}"/>

                                <Label text="Allow cancel myself" tooltip="" visible="{/NeedAprrove}" />
                                <CheckBox selected="{/AllowCancel}" visible="{/NeedAprrove}" 
                                    enabled="{g>/bOwner}"/>

                            <core:Title text="Security" />
                                <Label text="Administrator" tooltip="The people can manage the project"/>
                                <TextArea rows="2" value="{/Administrator}" placeholder="Seperate ID by ; or space" 
                                    enabled="{g>/bOwner}"/> 

                                <Label text="Project Public" />
                                <CheckBox id="checkBoxProjectPublic" selected="{/ProjectPublic}" 
                                    text="Control who can see the registrator information" 
                                    enabled="{g>/bOwner}"/>

                                <Label text="Registration Security" />
                                <Select selectedKey="{/RegistrationSecurity}"  enabled="{g>/bOwner}">
                                    <core:Item  key="Public"  text="Public -- All employee can see" />
                                    <core:Item  key="Protected"  text="Protected -- Only register can see" />
                                    <core:Item  key="Private"  text="Private  -- Only administrator can see" />
                                </Select>

                            </form:content>
                        </form:SimpleForm>
                    </content>
            </IconTabFilter>
            <IconTabFilter
                key="formIconTab"
                text="Form Design"
                icon="sap-icon://form">
                <content>

<table:Table  visibleRowCount="20"
         selectionMode="Single"
        rowSelectionChange="onFormTableRowSelectChanged"
        id="formTable"
        rows="{/}">
         <table:toolbar>
            <Toolbar id="formTableToolbar" visible="{g>/bOwner}">
                <content>
                     <Button  
                        text="Add Common Items"
                        tooltip="Add common used items, such as email, age..."
                        id="rowAddCommonBtn"
                        type="Emphasized"
                        press="onRowAddCommonPressed">
                    </Button>
                    
                    <ToolbarSpacer />
                    <Button  
                        id="rowAddBtn"
                        text="Add Customized Item"
                        tooltip="Add customized items as you like: define the type, label, toolip, candidate..."
                        icon="sap-icon://add"
                        press="onRowAddPressed">
                    </Button>
                    <ToolbarSpacer />
                    <Button
                            text="Clear"
                            id="rowClearBtn"
                            press="onRowClearPressed">
                        </Button>
                        <Button
                            id="rowDeleteBtn"
                            icon="sap-icon://delete"
                            press="onRowDelPressed">
                        </Button>
                        
                        <Button
                            id="rowTopBtn"
                            icon="sap-icon://arrow-top"
                            tooltip="Move to Top"
                            press="onRowTopPressed">
                        </Button>
                        <Button
                            id="rowUpBtn"
                            icon="sap-icon://slim-arrow-up"
                            tooltip="Move Up"
                            press="onRowUpPressed">
                        </Button>
                        <Button
                            id="rowDownBtn"
                            icon="sap-icon://slim-arrow-down"
                            tooltip="Move Down"
                            press="onRowDownPressed">
                        </Button>
                        <Button
                            id="rowBottomBtn"
                            icon="sap-icon://arrow-bottom"
                            tooltip="Move to Bottom"
                            press="onRowBottomPressed">
                        </Button>
                </content>
            </Toolbar>
        </table:toolbar>
        <table:columns>
            <table:Column  width="6%" >
                <table:label>
                    <Label text="Mandatory" tooltip="Mandatory"/>
                </table:label>
                <table:template>
                    <CheckBox selected="{mandatory}" enabled="{g>/bOwner}"/>
                </table:template>
            </table:Column>

            <table:Column width="14%">
                <table:label>
                    <Label text="type" /> 
                </table:label>
                <table:template>
                    <Select selectedKey="{type}"  enabled="{g>/bOwner}">
                        <core:Item  key="Input"  text="Input" />
                        <core:Item  key="Date"  text="Date" />
                        <core:Item  key="List"  text="List" />
                        <core:Item  key="Attachment"  text="Attachment" />
                        <core:Item  key="Number"  text="Number" />
                        <core:Item  key="Check"  text="CheckBox" />
                        <core:Item  key="Radio"  text="Radio Button" />
                    </Select>
                </table:template>
            </table:Column>

            <table:Column width="18%">
                <table:label>
                    <Label text="Label" /> 
                </table:label>
                <table:template>
                    <Input value="{label}" enabled="{g>/bOwner}"/>
                </table:template>
            </table:Column>

             <table:Column width="22%">
                <table:label>
                    <Label text="Tooltip" tooltip="Inut some explan information to help user how to fill" /> 
                </table:label>
                <table:template>
                    <Input value="{tooltip}" enabled="{g>/bOwner}"/>
                </table:template>
            </table:Column>

            <table:Column width="40%">
                <table:label>
                    <Label text="Candidate seperate by ';', only valid for List type" 
                        tooltip="Only need when type is List. Seperate it by ;"/> 
                </table:label>
                <table:template>
                    <Input value="{candidate}" visible="{path: 'type', formatter: '.fmtCandidate'}" enabled="{g>/bOwner}"/>
                </table:template>
            </table:Column>
            
        </table:columns>
    </table:Table>


                </content>
            </IconTabFilter>
            <IconTabFilter
                key="emailIconTab"
                text="Email Notifycation"
                icon="sap-icon://email"
                visible="{/NeedAprrove}">

                <Toolbar id="emailToolbar" visible="{g>/bOwner}">
                    <ToolbarSpacer />
                    <Button  
                        text="Load Default Content"
                        tooltip="Choose default email template"
                        type="Emphasized"
                        press="onLoadDefaultContetPressed"
                        enabled="{/NeedEmailNotification}">
                    </Button>
                    <ToolbarSpacer />
                </Toolbar>

                <form:SimpleForm id="emailForm" 
                      layout="ResponsiveGridLayout" 
                      labelSpanL="4"
                      labelSpanM="4"
                     >
                    <form:content>
                        <Label text="Email notification for approve/reject" required="true"/>
                        <CheckBox selected="{/NeedEmailNotification}" text="If checked, employee will receive email for approve/reject" 
                                    enabled="{g>/bOwner}"/>

                        <Label text="Signature"  required="true" visible="{/NeedEmailNotification}" tooltip="Email Signature"/>
                        <Input value="{/EmailSignature}"   visible="{/NeedEmailNotification}" enabled="{g>/bOwner}"/>

                        <Label text="Approve Subject"  required="true" visible="{/NeedEmailNotification}" 
                            tooltip="Subject used for approve registration"/>
                        <Input value="{/EmailApproveSubject}" visible="{/NeedEmailNotification}"  enabled="{g>/bOwner}"/>

                        <Label text="Approve Body"  required="true" tooltip="Content for approve registration"
                            visible="{/NeedEmailNotification}"/>
                        <TextArea rows="3" value="{/EmailApproveBody}" visible="{/NeedEmailNotification}" enabled="{g>/bOwner}"/> 

                        <Label text="Reject Subject"  required="true" 
                            tooltip="Subject used for Reject registration" visible="{/NeedEmailNotification}"/>
                        <Input value="{/EmailRejectSubject}"   visible="{/NeedEmailNotification}"/>

                        <Label text="Approve Body"  required="true" tooltip="Content for reject registration"
                            visible="{/NeedEmailNotification}"/>
                        <TextArea rows="3" value="{/Description}" enabled="{g>/bOwner}" visible="{/NeedEmailNotification}"/> 
                    </form:content>
                </form:SimpleForm>
            </IconTabFilter>
        </items>
    </IconTabBar>

  		 <footer>  
            <Bar id="footerBar">
                <contentRight>
                    <Button
                        text="Save"
                        type="Emphasized"
                        icon="sap-icon://save"
                        id="saveBtn"
                        press="onSavePressed"
                        visible="{g>/bOwner}"
                        >
                    </Button>

                    <Button
                        text="Delete"
                        icon="sap-icon://delete"
                        id="deleteBtn"
                        press="onDeletePressed"
                        visible="{g>/bOwner}"
                        />
                    <Button
                        text="Duplicate"
                        tooltip="Create new project by copy existing content"
                        icon="sap-icon://duplicate"
                        id="duplicateBtn"
                        press="onDuplicatePressed"
                        />
                    <Button
                        text="Preview"
                        tooltip="Preview locally, very fast"
                        icon="sap-icon://display"
                        id="previewBtn"
                        press="onPreviewPressed"
                        />
                     <Button
                        text="Employee Registration Window"
                        tooltip="Open the registration window for Employee"
                        icon="sap-icon://form"
                        id="openRegistrationBtn"
                        press="onOpenRegistrationPressed"
                        />   
                    <Button
                        text="Administrator Explore Window"
                        tooltip="Open the explore window for Administrator"
                        icon="sap-icon://explorer"
                        id="openExploreBtn"
                        press="onOpenExplorePressed"
                        />           
                </contentRight>
            </Bar>
        </footer>

    </Page>
</core:FragmentDefinition>       

