<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">

    <Dialog class="sapUiSizeCompact"
        title="Define sub-project information and limitation">
        <content>
            <Table
                id="idProductsTable" items="{/}"
                inset="false">
                <columns>
                    <Column
                        width="20em">
                        <header>
                            <Text
                                text="Information">
                            </Text>
                        </header>
                    </Column>
                    <Column
                        width="10em">
                        <header>
                            <Text
                                text="Limitation"
                                tooltip="Empty or 0 means no limitation">
                                <tooltip>
                                </tooltip>
                            </Text>
                        </header>
                    </Column>
                    <Column
                        minScreenWidth="Tablet"
                        demandPopin="true">
                        <header>
                            <Text
                                text="Operations">
                            </Text>
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Input
                                value="{info}">
                            </Input>
                            <Input
                                value="{limit}">
                            </Input>
                            <HBox>
                                <items>
                                    <Button
                                        icon="sap-icon://delete"
                                        press="onSubProjectRowDeletePressed">
                                    </Button>
                                    <Button
                                        icon="sap-icon://add"
                                        press="onSubProjectRowAddPressed">
                                    </Button>
                                </items>
                            </HBox>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <beginButton>
            <Button
                text="Ok"
                press="onSubProjectOkButtonPressed">
            </Button>
        </beginButton>
        <endButton>
            <Button
                text="Cancel"
                press="onSubProjectCancelButtonPressed">
            </Button>
        </endButton>
    </Dialog>
</core:FragmentDefinition>